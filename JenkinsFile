pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master', url: 'https://github.com/Donaldudu/MLOps_Assignment01.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t donaldudu/ml-app .'
            }
        }
        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: 'https://index.docker.io/v1/'
    ]) {
                    sh 'docker push donaldudu/ml-app'
                }
            }
        }
    }
}

